<?xml version="1.0"?>
<launch>

  <arg name="use_fake_localization" default="false"/>

  <arg name="amcl_scan"       default="base_scan_front"/>
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_footprint"/>
  <arg name="global_frame_id" default="/map"/>

  <!-- use fake_localization -->
  <group if="$(arg use_fake_localization)" >
    <node pkg="fake_localization" type="fake_localization" name="fake_localization" output="screen">
        <remap from="/base_pose_ground_truth" to="odom" />
        <rosparam command="load" file="$(find hera_nav)/config/localization/fl.yaml" />
        <param name="odom_frame_id" value="$(arg odom_frame_id)"/>
  	    <param name="base_frame_id" value="$(arg base_frame_id)"/>
  	    <param name="global_frame_id" value="$(arg global_frame_id)"/>
    </node>
  </group>

  <!-- use amcl -->
  <group unless="$(arg use_fake_localization)" >
  	<node pkg="amcl" type="amcl" name="amcl" output="screen">
  	    <remap from="scan" to="$(arg amcl_scan)" />
        <rosparam command="load" file="$(find hera_nav)/config/localization/amcl.yaml" />
       	<param name="odom_frame_id" value="$(arg odom_frame_id)"/>
  	    <param name="base_frame_id" value="$(arg base_frame_id)"/>
  	    <param name="global_frame_id" value="$(arg global_frame_id)"/>
  	</node>
  </group>

</launch>
